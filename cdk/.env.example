# Email Analyzer CDK Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Resend API key for sending emails
RESEND_API_KEY=your-resend-api-key-here

# From email address - using Resend's test domain
RESEND_FROM_EMAIL=onboarding@resend.dev

# Optional: Sparky LLM API endpoint URL
SPARKY_LLM_URL=http://sparky:8001/v1/chat/completions

# Required: Claude API key for language detection and analysis
ANTHROPIC_API_KEY=your-anthropic-api-key-here
