# Email Analyzer Configuration
# Copy this file to .env and fill in your actual values

# Required: Resend API key for sending emails
RESEND_API_KEY=your_resend_api_key_here

# Optional: From email address for sending responses
# Default: onboarding@resend.dev (Resend's test domain)
# For production: Use your verified domain (e.g., noreply@yourdomain.com)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Optional: Sparky LLM API endpoint URL
# Default: http://sparky:8001/v1/chat/completions
SPARKY_LLM_URL=http://sparky:8001/v1/chat/completions

# Optional: Node environment (development, staging, production)
# Default: production
NODE_ENV=production

# Optional: Server port
# Default: 3000
PORT=3000

# Optional: Log level for pino logger (fatal, error, warn, info, debug, trace)
# Default: info
LOG_LEVEL=info
